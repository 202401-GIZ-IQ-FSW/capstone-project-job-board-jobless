    <script>
        function googleSignIn() {
            // Initiate Google sign-in
            const auth2 = gapi.auth2.getAuthInstance();
            auth2.signIn().then(googleUser => {
                onSignInGoogle(googleUser);
            });
        }

        function onSignInGoogle(googleUser) {
            var profile = googleUser.getBasicProfile();
            console.log('Google ID: ' + profile.getId());
            console.log('Name: ' + profile.getName());
            console.log('Image URL: ' + profile.getImageUrl());
            console.log('Email: ' + profile.getEmail());

            var id_token = googleUser.getAuthResponse().id_token;
            console.log('ID Token: ' + id_token);

            // Send the ID token to your server with an HTTP POST request
            var xhr = new XMLHttpRequest();
            xhr.open('POST', '/tokensignin');
            xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
            xhr.onload = function() {
                console.log('Signed in as: ' + xhr.responseText);
            };
            xhr.send('idtoken=' + id_token);
        }

        // Facebook Login
        window.fbAsyncInit = function() {
            FB.init({
                appId      : 'YOUR_FACEBOOK_APP_ID',
                cookie     : true,
                xfbml      : true,
                version    : 'v10.0'
            });
            
            FB.AppEvents.logPageView();   
        };

        (function(d, s, id){
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) {return;}
            js = d.createElement(s); js.id = id;
            js.src = "https://connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));

        function loginWithFacebook() {
            FB.login(function(response) {
                if (response.authResponse) {
                    console.log('Welcome!  Fetching your information.... ');
                    FB.api('/me', function(response) {
                        console.log('Good to see you, ' + response.name + '.');
                        // Send the access token to your server with an HTTP POST request
                        var xhr = new XMLHttpRequest();
                        xhr.open('POST', '/fbtokensignin');
                        xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
                        xhr.onload = function() {
                            console.log('Signed in as: ' + xhr.responseText);
                        };
                        xhr.send('accesstoken=' + FB.getAuthResponse().accessToken);
                    });
                } else {
                    console.log('User cancelled login or did not fully authorize.');
                }
            }, {scope: 'public_profile,email'});
        }

        // Twitter Login
        function loginWithTwitter() {
            window.location.href = '/twitterlogin';
        }

        // Load the Google Auth2 library
        function loadGoogleAuth() {
            gapi.load('auth2', function() {
                gapi.auth2.init();
            });
        }

        // Initialize the Google Auth2 library when the script loads
        (function() {
            var po = document.createElement('script');
            po.type = 'text/javascript';
            po.async = true;
            po.src = 'https://apis.google.com/js/platform.js?onload=loadGoogleAuth';
            var s = document.getElementsByTagName('script')[0];
            s.parentNode.insertBefore(po, s);
        })();
    </script>
